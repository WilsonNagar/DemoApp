<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@android:color/holo_green_light">
    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/pageimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/pagetitle"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/pageimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pageimage"
        app:layout_constraintBottom_toTopOf="@id/pagetext"/>
    <TextView
        android:id="@+id/pagetext"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/pageimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pagetitle"
        app:layout_constraintBottom_toBottomOf="@id/pageimage"/>
    <Button
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@id/pageimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>